{{ form_start(editGalleryForm) }}

<div class="modal fade" id="{{ id }}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit photo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    {{ form_row(editGalleryForm.name, { attr: { value: gallery.name } }) }}
                </div>
                <div class="form-group">
                    {{ form_row(editGalleryForm.description, { value: gallery.description }) }}
                    {{ form_row(editGalleryForm._token) }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                {{ form_row(editGalleryForm.submitButton) }}
            </div>
        </div>
    </div>
</div>
{{ form_row(editGalleryForm.id, { attr: { value: gallery.id } }) }}
{{ form_end(editGalleryForm) }}

