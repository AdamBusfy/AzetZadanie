{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('pageRegister') }}
{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container-fluid">
        <div class="row no-gutter">
            <!-- The image half -->
            <div class="col-md-6 d-none d-md-flex bg-image"></div>

            <!-- The content half -->
            <div class="col-md-6 bg-light">
                <div class="login d-flex align-items-center py-5">
                    <!-- Demo content-->
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-10 col-xl-7 mx-auto">
                                <h3 class="display-4">Register to Gallery!</h3>
                                <p class="text-muted mb-4">Register and store your photos whenever you want.</p>

                                <div class="mb-3">
                                    {{ form_row(registrationForm.email) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(registrationForm.password) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(registrationForm.agreeTerms) }}
                                </div>
                                <div class="mb-3">
                                {{ form_row(registrationForm.submitButton) }}
                                </div >

                                <a href="{{ path('app_login') }}">Sign in</a>

                            </div>
                        </div>
                    </div><!-- End -->

                </div>
            </div><!-- End -->

        </div>
    </div>

    {{ form_end(registrationForm) }}

{% endblock %}
